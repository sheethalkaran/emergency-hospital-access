# Hospital Search Backend - Environment Configuration
# Copy this file to .env and fill in your actual values

# MongoDB Connection String (from MongoDB Atlas)
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@cluster0.mongodb.net/hospital_finder?retryWrites=true&w=majority

# Server Configuration
PORT=3000
NODE_ENV=production

# CORS Settings (add your frontend URL)
FRONTEND_URL=https://hospital-search-xyz.netlify.app

# API Documentation (optional)
API_DOCS_ENABLED=true

# Logging
LOG_LEVEL=info

# Email Configuration (optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
